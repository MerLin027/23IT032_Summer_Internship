@model IEnumerable<TeamCollabTool.Data.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        @if (User.IsInRole("Manager"))
        {
            <a asp-action="Create" class="btn btn-primary" style="float:right;">Create New Project</a>
        }
        <h1>Projects</h1>
    </div>

    <div class="row">
        @foreach (var project in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text">@project.Description</p>
                        <div class="mb-3">
                            <small class="text-muted">
                                <strong>Owner:</strong> @project.Owner?.FullName<br>
                                <strong>Created:</strong> @project.CreatedDate.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            @if (project.OwnerId == User.Identity.Name)
                            {
                                <div>
                                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-secondary btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
}