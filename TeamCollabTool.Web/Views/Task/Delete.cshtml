@model TeamCollabTool.Data.Models.Task

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0">Delete Task</h1>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>Are you sure you want to delete this task? This action cannot be undone.</p>
                    </div>

                    <div class="mb-4">
                        <h5>Task Details</h5>
                        <dl class="row">
                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9">@Model.Title</dd>

                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9">@Model.Description</dd>

                            <dt class="col-sm-3">Project</dt>
                            <dd class="col-sm-9">@Model.Project?.Name</dd>

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-@(Model.Status switch {
                                    "To Do" => "secondary",
                                    "In Progress" => "primary",
                                    "Done" => "success",
                                    _ => "secondary"
                                })">@Model.Status</span>
                            </dd>

                            <dt class="col-sm-3">Priority</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-@(Model.Priority switch {
                                    "Low" => "success",
                                    "Medium" => "warning",
                                    "High" => "danger",
                                    _ => "secondary"
                                })">@Model.Priority</span>
                            </dd>

                            <dt class="col-sm-3">Due Date</dt>
                            <dd class="col-sm-9">@Model.DueDate?.ToString("MMM dd, yyyy")</dd>

                            <dt class="col-sm-3">Assigned To</dt>
                            <dd class="col-sm-9">@(Model.AssignedUser?.FullName ?? "Unassigned")</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 